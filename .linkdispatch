  '^https\?://[^/]*127\.0\.0\.1:[0-9]*/Dash/'
'^https\?://[^/]*docs\.rs'
'^https\?://[^/]*\.bilibili\.com'
'^https\?://youtube\.com'
'^https\?://www\.umeng\.com'
'^https\?://github\.umeng\.co'
'^https\?://localhost'

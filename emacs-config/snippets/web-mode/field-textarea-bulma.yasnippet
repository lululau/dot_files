# -*- mode: snippet -*-
# name: bulma-field-textarea
# key: textarea
# group: bulma
# binding: direct-keybinding
# --
<div class="field">
  <label class="label">$1</label>
  <div class="control">
    <textarea class="textarea is-${2:$$(yas-choose-value '("primary" "link" "success" "info" "warning" "danger" "link" "white" "light" "dark" "black" "text" "ghost"))}$3" placeholder="$4">$0</textarea>
  </div>
</div>
